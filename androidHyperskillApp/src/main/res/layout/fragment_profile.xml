<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileSettingsAvatarNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/profileEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toStartOf="@+id/profileSettingsButton"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/profileSettingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_settings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/profileAvatarImageView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileEditButton" />

            <TextView
                android:id="@+id/profileNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Konstantin\nKonstantinopolsky"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/profileAvatarImageView"
                app:layout_constraintTop_toTopOf="@+id/profileAvatarImageView" />

            <TextView
                android:id="@+id/profileRoleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Learner"
                android:textColor="@color/color_on_surface_alpha_60"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/profileNameTextView"
                app:layout_constraintTop_toBottomOf="@+id/profileNameTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/profileSettingsAvatarNameDivider"
            layout="@layout/view_divider_vertical"
            android:layout_width="match_parent"
            android:layout_height="?dividerVerticalSize"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/profileSettingsAvatarNameLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileStreakLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:background="@color/color_surface"

            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileSettingsAvatarNameDivider">

            <TextView
                android:id="@+id/profileSolvingProblemStreakTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/streak_solving_problem_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileStreakStatCardDays"
                style="@style/StreakStatCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileSolvingProblemStreakTextView"
                app:layout_constraintVertical_bias="0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/profileStreakNewRecordImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/ic_crown"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/profileStreakDaysCountTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:paddingBottom="8dp"
                        android:text="@string/streak_days_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileStreakDaysCountTextView" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profileStreakLastFiveRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/profileStreakPreviousFiveDaysTextView"
                app:layout_constraintStart_toEndOf="@+id/profileStreakStatCardDays" />

            <TextView
                android:id="@+id/profileStreakPreviousFiveDaysTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/streak_previous_five_days_text"
                android:textAppearance="@style/StreakSmallText"
                app:layout_constraintBottom_toBottomOf="@+id/profileStreakStatCardDays"
                app:layout_constraintStart_toStartOf="@+id/profileStreakLastFiveRecyclerView" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileStreakTodayCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profileStreakPreviousFiveDaysTextView"
                app:strokeColor="@color/color_overlay_blue"
                app:strokeWidth="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="8dp"
                    android:drawablePadding="8dp"
                    android:text="@string/streak_today_text"
                    android:textAppearance="@style/StreakSmallText"
                    app:drawableTopCompat="@drawable/ic_fire_disabled" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_surface"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileStreakLayout">

            <TextView
                android:id="@+id/profileAboutMeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_about_me_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileAboutLivesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Lives in India" />

            <TextView
                android:id="@+id/profileAboutSpeaksTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Speaks English" />

            <TextView
                android:id="@+id/profileAboutBioBarTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/profile_bio_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileAboutBioTextTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Something in bio" />

            <TextView
                android:id="@+id/profileAboutExperienceBarTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/profile_experience_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileAboutExperienceTextTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Something in experience" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/profileFacebookButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_profile_facebook" />

                <ImageButton
                    android:id="@+id/profileTwitterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_profile_twitter" />

                <ImageButton
                    android:id="@+id/profileLinkedinButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_profile_linkedin" />

                <ImageButton
                    android:id="@+id/profileRedditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_profile_reddit" />

                <ImageButton
                    android:id="@+id/profileGithubButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_profile_github" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_view_full_version_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>