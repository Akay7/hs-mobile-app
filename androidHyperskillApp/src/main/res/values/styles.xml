<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ShapeAppearanceOverlay.App.RoundedCorners8" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <style name="Widget.AppTheme.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayouts.InputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
    </style>

    <!-- Auth -->
    <style name="ZeroSizeTextAppearance">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="InfoError">
        <item name="android:theme">@style/ThemeOverlay.Red</item>
        <item name="android:background">@drawable/bg_shape_rounded</item>
        <item name="backgroundTint">@color/color_overlay_red_alpha_12</item>
        <item name="drawableTint">?android:textColorPrimary</item>
    </style>

    <style name="PlaceholderTextViewStyle">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:padding">@dimen/padding_placeholders</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StepQuizFeedback">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@drawable/bg_shape_rounded</item>
    </style>

    <style name="StepQuizFeedback.Correct">
        <item name="android:theme">@style/ThemeOverlay.Red</item>
        <item name="backgroundTint">@color/color_green_200_alpha_12</item>
        <item name="android:textColor">@color/step_quiz_feedback_right_color</item>
    </style>

    <style name="StepQuizFeedback.Wrong">
        <item name="android:theme">@style/ThemeOverlay.Red</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/step_quiz_feedback_wrong_color</item>
        <item name="drawableTint">@color/step_quiz_feedback_wrong_color</item>
    </style>

    <style name="StepQuizFeedback.Feedback">
        <item name="strokeColor">@color/color_on_surface_alpha_12</item>
        <item name="strokeWidth">1dp</item>
        <item name="background">@color/color_background</item>
    </style>

    <style name="StepQuizDescription">
        <item name="android:textAppearance">?textAppearanceCaption</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="StepQuizChoiceElement">
        <item name="android:padding">8dp</item>
        <item name="android:buttonTint">@color/color_on_surface_alpha_60</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>