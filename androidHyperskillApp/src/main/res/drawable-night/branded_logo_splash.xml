<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/color_blue_400"
                android:endColor="@color/color_black_900"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <bitmap
            android:src="@drawable/ic_branded_logo_splash"
            android:gravity="center" />
    </item>
    <item
        android:bottom="48dp">
        <bitmap
            android:src="@drawable/ic_subtitle_splash"
            android:gravity="bottom" />
    </item>

</layer-list>